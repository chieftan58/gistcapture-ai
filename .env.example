# Renaissance Weekly Configuration
# Copy this to .env and fill in your API keys

# REQUIRED - Core APIs
OPENAI_API_KEY=your_openai_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# HIGHLY RECOMMENDED - Free APIs that dramatically improve transcript discovery
# Get YouTube API key at: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Get Podcast Index credentials at: https://api.podcastindex.org/
PODCASTINDEX_API_KEY=your_podcast_index_key_here
PODCASTINDEX_API_SECRET=your_podcast_index_secret_here

# OPTIONAL - Paid transcription services (if you have accounts)
ASSEMBLYAI_API_KEY=your_assemblyai_key_here
REV_AI_API_KEY=your_rev_ai_key_here
DEEPGRAM_API_KEY=your_deepgram_key_here

# OPTIONAL - Other settings
EMAIL_TO=your_email@example.com
TESTING_MODE=true  # Set to false for production (full episode transcription)
MAX_TRANSCRIPTION_MINUTES=15  # Default 15 minutes for test mode (override as needed)

# OPTIONAL - Spotify API (if implemented)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# EXPERIMENTAL - Skip strict validation in test mode
SKIP_VALIDATION=false  # Set to true to bypass all validation checks